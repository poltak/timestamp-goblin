{
    "name": "timestamp-goblin",
    "version": "0.1.1",
    "private": true,
    "description": "Chrome extension to persist YouTube watch progress.",
    "type": "module",
    "scripts": {
        "dev": "npm run build:watch",
        "build": "node scripts/build.mjs",
        "build:watch": "node scripts/build.mjs --watch",
        "build:prod": "NODE_ENV=production node scripts/build.mjs",
        "check": "tsc --noEmit",
        "check:watch": "tsc --noEmit --watch",
        "package": "npm run build:prod && node scripts/package.mjs",
        "format": "prettier --write \"**/*.{ts,json,md}\"",
        "test": "vitest",
        "test:run": "vitest run"
    },
    "devDependencies": {
        "@vitest/coverage-v8": "^2.1.7",
        "chrome-types": "^0.1.409",
        "esbuild": "^0.27.2",
        "jsdom": "^25.0.1",
        "prettier": "^3.7.4",
        "typescript": "^5.9.3",
        "vitest": "^2.1.7"
    }
}
