{
    "manifest_version": 3,
    "name": "Timestamp Goblin",
    "version": "0.1.0",
    "description": "Persist and restore YouTube watch progress.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon-16.png",
            "32": "icon-32.png",
            "48": "icon-48.png",
            "128": "icon-128.png"
        }
    },
    "icons": {
        "16": "icon-16.png",
        "32": "icon-32.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "permissions": ["storage"],
    "host_permissions": ["https://www.youtube.com/*"],
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ]
}
